<br>
<div class="container-fluid">
  <div class="row">
    <% getWeekDays.each_with_index do |date, index|%>
    <button onclick="Panel1(<%=index%>,'#900C3F')" class="btn btn-primary weekBtn" style="width:120px;">
      <%=date.strftime("%A")%><br><%= date.month%><%= "/" %><%= date.day %>
    </button>
    <%end%>
  </div>
</div>
<br>
<% getWeekDays.each_with_index do |date, i|%>
  <div class="weekDays">
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v6.0"></script>

    <div class="panel panel-default">
      <% id = date.strftime("%A")%>
      <% if weekEvents[i].count != 0 %>
        <table class="table table-hover" id=calendar>
          <tbody>
            <% weekEvents[i].sort_by{|t| t.start_at}.each_with_index do |event, i| %>
              <% user = User.find(event.usrid) %>
              <% dayId = "day-#{id}-#{i}"%>
              <% timeId = "time-#{id}-#{i}"%>
              <%= render partial: "layouts/#{eventDisplayStyle}", locals: {event: event, user: user, dayId:  dayId, timeId: timeId, i: i}%>
            <% end %>
          </tbody>
        </table>
      <%else%>
        <h4 style="color: black; text-align:center;">
          There are no <%=eventType%> hours on <%=id.downcase%>. Try the following day!
        </h4>
      <%end%>
    </div>
  </div>
<%end%>

<script>
  function Panel1 (panelIndex) {
    var tabButtons=document.querySelectorAll(".weekBtn");
    var tabPanels=document.querySelectorAll(".weekDays");

    tabPanels.forEach(function(node) {
      node.style.display="none";
    });
    tabPanels[panelIndex].style.display="block";
  }
  Panel1(0);
</script>
